import random
from typing import Dict, Any, List

class CareerManager:
    """Manages player progression, stats, and awards."""
    def __init__(self, name: str, position: str, team: str, team_ovr: int, look: str):
        self.profile = {
            "name": name, "pos": position, "team": team, "team_ovr": team_ovr, "look": look,
            "ovr": 70 + random.randint(0, 10), "xp": 0, "stars": random.randint(3, 5),
            "discipline": 70, "balance": 75, "hype": 100, "coach_trust": 50,
            "league": "NCAA" if team_ovr < 88 else "NFL"
        }
        self.stats = {"tds": 0, "yards": 0, "sacks": 0, "fumbles": 0}
        self.awards = {"Heisman_Votes": 0, "Superbowl_Wins": 0}
        self.draft_stock = "Day 3"
        self.news_feed = []

    def update_stats(self, yds=0, tds=0, sacks=0, fumbles=0):
        self.stats["yards"] += yds
        self.stats["tds"] += tds
        self.stats["sacks"] += sacks
        self.stats["fumbles"] += fumbles
        self.update_xp(yds * 2 + tds * 100)
        
    def update_xp(self, amount: int):
        self.profile["xp"] += amount
        self.evaluate_draft_stock()

    def update_coach_trust(self, discipline_score: float):
        """Higher trust unlocks more complex routes (Slant, Go)."""
        self.profile["coach_trust"] += (discipline_score - 75) // 5
        self.profile["coach_trust"] = max(0, min(100, self.profile["coach_trust"]))

    def evaluate_draft_stock(self):
        score = (self.profile["ovr"] * 0.7) + (self.profile["discipline"] * 0.3)
        if score > 90: self.draft_stock = "1st Round (Top 5 Pick)"
        elif score > 80: self.draft_stock = "1st Round"
        else: self.draft_stock = "Day 3"

class RulesEngine:
    """Manages rules based on NCAA or NFL modes, and handles AI mistakes."""
    def __init__(self):
        self.mode = "NCAA" # Default mode
        self.commentary = ""

    def set_mode(self, mode: str):
        self.mode = mode
        
    def check_for_penalty(self) -> bool:
        """AI mistakes probability rates: 15% chance of penalty."""
        if random.random() < 0.15:
            penalty = random.choice(["HOLDING (10 Yards)", "PASS INTERFERENCE (Spot)", "OFFSIDES (5 Yards)"])
            self.commentary = f"PENALTY! {penalty}"
            return True
        return False

    def check_catch(self, receiver_ovr: int) -> bool:
        """Madden 26/CFB 26 logic: Catch probability based on OVR."""
        catch_chance = 0.5 + (receiver_ovr - 70) * 0.02
        is_catch = random.random() < catch_chance
        self.commentary = "Amazing catch animation!" if is_catch else "Dropped ball!"
        return is_catch
        
    def check_fumble(self, tackle_force: int, carrier_balance: int) -> bool:
        """Fumble probability based on C++ style physics emulation."""
        fumble_chance = (tackle_force - 50) * 0.01 / (carrier_balance / 75)
        return random.random() < fumble_chance

class GameDatabase:
    """Emulates real football team data, conferences, and rankings."""
    TEAMS = {
        "NCAA": [
            {"name": "Colorado", "ovr": 85, "conf": "Big 12", "rank": 15, "stars": 4},
            {"name": "Texas", "ovr": 92, "conf": "SEC", "rank": 3, "stars": 5},
            {"name": "Georgia", "ovr": 95, "conf": "SEC", "rank": 1, "stars": 5},
        ],
        "NFL": [
            {"name": "Eagles", "ovr": 90, "rank": 5},
            {"name": "Chiefs", "ovr": 92, "rank": 2},
            {"name": "Cowboys", "ovr": 88, "rank": 10},
        ]
    }
    def get_teams(self, league: str) -> List[Dict]:
        return self.TEAMS[league]

class GameEngine:
    """The main 2026 simulation loop."""
    def __init__(self):
        self.rules = RulesEngine()
        self.db = GameDatabase()
        self.career = None
        self.game_active = False

    def setup_career(self):
        print("\n--- GRIDIRON 26: CAREER SETUP ---")
        name = input("Enter Player Name: ")
        pos = input("Enter Position (QB, HB, WR, LB): ")
        look = input("Choose look (e.g., dreadlocks): ")
        
        print("\nChoose League Mode:")
        league = input("Enter 'NCAA' or 'NFL': ")
        self.rules.set_mode(league)
        
        print(f"\nChoose your {league} team:")
        teams = self.db.get_teams(league)
        for t in teams:
            print(f"- {t['name']} (OVR: {t['ovr']})")
        team_name = input("Enter Team Name: ")
        team_data = next(t for t in teams if t['name'].lower() == team_name.lower())

        self.career = CareerManager(name, pos, team_name, team_data['ovr'], look)
        self.game_active = True
        print(f"Career started as {self.career.profile['name']} for the {team_name}!")
        print(f"Current World Rank: #{team_data.get('rank', 'N/A')}")
        self.simulate_week()

    def simulate_week(self):
        """Simulates one week of the season."""
        print(f"\n--- WEEK SIMULATION (Playing {self.career.profile['pos']}) ---")
        
        # Position Battles/Practice Mode Logic (Area user isn't active)
        if self.career.profile['pos'] in ['QB', 'WR', 'HB']:
            print("Running offensive practice simulation...")
            yards = random.randint(50, 200)
            tds = random.randint(0, 3)
            self.career.update_stats(yds=yards, tds=tds)
        else:
            print("Running defensive practice simulation...")
            tackles = random.randint(5, 15)
            sacks = random.randint(0, 2)
            # Fumble probability check
            if random.random() < 0.1:
                self.rules.check_fumble(tackle_force=random.randint(70, 90), carrier_balance=70)
                self.career.update_stats(sacks=sacks, fumbles=1)
        
        print(f"Week summary: Yards: {self.career.stats['yards']} TDs: {self.career.stats['tds']}")
        print(self.career.generate_news_feed(yards))
        
        if random.random() < 0.2 and self.career.profile['league'] == 'NCAA':
             print("HEISMAN UPDATE: You are now eligible for the Heisman Watch!")


    def run_championship(self):
        """Championship/Superbowl Logic."""
        if self.career.profile['league'] == 'NCAA':
            print("\n*** NATIONAL CHAMPIONSHIP GAME ***")
        else:
            print("\n*** SUPER BOWL 2026 ***")
        
        if random.random() > 0.5:
            print(f"CONGRATULATIONS! The {self.career.profile['team']} win the Championship!")
            if self.career.profile['league'] == 'NCAA':
                self.career.awards['Heisman_Votes'] += 100
            else:
                self.career.awards['Superbowl_Wins'] += 1
        else:
            print("Tough Loss in the big game.")


# Execute the simulation
if __name__ == "__main__":
    game_engine = GameEngine()
    game_engine.setup_career()
    
    # Simulate a full 10 weeks of the season
    for week in range(1, 11):
        game_engine.simulate_week()
        time.sleep(0.1) # Max FPS simulation
        
    game_engine.run_championship()
    print(f"\n--- CAREER SUMMARY ---")
    print(f"Draft Stock: {game_engine.career.draft_stock}")
    print(f"Final OVR: {game_engine.career.profile['ovr']}")
    print(f"Total XP: {game_engine.career.profile['xp']}")

