class CareerManager:
    """Expanded player career with hype, morale, injuries, draft, and awards."""
    def __init__(self, name, position, team, team_ovr, look):
        self.profile = {
            "name": name,
            "pos": position,
            "team": team,
            "team_ovr": team_ovr,
            "ovr": 70 + random.randint(0,10),
            "xp": 0,
            "stars": random.randint(3,5),
            "discipline": 70,
            "balance": 75,
            "hype": 100,
            "morale": 80,
            "fatigue": 0,
            "injured": False,
            "coach_trust": 50,
            "league": "NCAA" if team_ovr < 88 else "NFL"
        }

        self.stats = {"yds":0,"tds":0,"sacks":0,"fumbles":0}
        self.awards = {"Heisman":0,"Superbowls":0}
        self.draft = {"stock":"Day 3","combine_done":False}
        self.news = []

    def update_week(self, yds, tds):
        self.stats["yds"] += yds
        self.stats["tds"] += tds
        self.profile["xp"] += yds*2 + tds*100
        self.profile["hype"] += tds*5
        self.profile["morale"] += tds*3 - self.profile["fatigue"]*0.5
        self.profile["fatigue"] = min(100, self.profile["fatigue"]+20)
        self.evaluate_stock()

    def evaluate_stock(self):
        score = (self.profile["ovr"]*0.7)+(self.profile["discipline"]*0.2)+(self.profile["hype"]*0.1)
        if score > 92: self.draft["stock"] = "Top 5"
        elif score > 86: self.draft["stock"] = "1st Round"
        elif score > 80: self.draft["stock"] = "Day 2"
        else: self.draft["stock"] = "Day 3"

def simulate_events(self):
    roll = random.random()
    if roll < 0.1:
        self.career.news.append("Rival QB trash-talks you on social media.")
        self.career.profile["hype"] += 10
    elif roll < 0.15:
        self.career.news.append("Media questions your discipline during press interview.")
        self.career.profile["morale"] -= 8
    elif roll < 0.18 and self.career.profile["league"] == "NCAA":
        self.career.news.append("HEISMAN WATCH: You're trending upward!")
        self.career.awards["Heisman"] += 25
