function playCrowdSound(type) {
    const audio = new Audio(`sounds/${type}.mp3`);
    audio.volume = 0.5; // base volume
    audio.play();
}

// Trigger on play success
if(routeCompleted) playCrowdSound('rising_cheer');

// Trigger hush for away TD
if(awayTD) {
    setTimeout(() => playCrowdSound('away_cheer'), 2000);
}
